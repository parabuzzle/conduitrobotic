					<ul>
						<li><%=link_to("mailing list.", :controller=>:site, :action=>:index)%></li>
						<li><%=link_to("live stream.", "http://www.justin.tv/conduitrobotic")%></li>
						<li><%=link_to("downloads.", :controller=>:site, :action=>:index)%></li>
						<li><%=link_to("extras.", :controller=>:site, :action=>:index)%></li>
					</ul>
					<div class="center">
					<%=link_to(image_tag('color_stroked_icons/rss.png'), "http://feeds.feedburner.com/ConduitRobotic")%><br/>
					subscribe to my podcast
					</div>
				</div>

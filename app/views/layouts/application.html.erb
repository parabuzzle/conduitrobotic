<!DOCTYPE html>
<html>
<head>
  <title>Conduit Robotic :: <%=@title%></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<!--<div id="bookme"><%=image_tag("bookme1.gif")%></div>-->
	<%if flash[:error]%>
		<div id="error"><div id="flash"><%=flash[:error]%></div></div>
	<%end%>
	<%if flash[:notice]%>
		<div id="notice"><div id="flash"><%=flash[:notice]%></div></div>
	<%end%>
	<div id="container">
		<div id="header">
			
		</div><!--header-->
		<div id="twitter">
			<div id="twitter-head"><%=link_to(image_tag('color_stroked_icons/twitter.png', :width=>"50px"), "http://twitter.com/conduitrobotic")%></div>
			<div class="twit-text">
				<%=raw(auto_link(twitter_get_last['text']))%>
			</div>
			<div class="twit-time">
				<%unless twitter_get_last['id'] == false%>
					<%=link_to("Posted: #{rel_date(twitter_get_last['when'])}","http://twitter.com/conduitrobotic/status/#{twitter_get_last['id']}")%>
				<%end%>
			</div>
		</div>
		<div class="clear"></div>
		<div id="nav">
			<ul>
				<li><%=link_to("home.", :controller=>:site, :action=>:index)%></li>
				<li>|</li>
				<li><%=link_to("about.", :controller=>:site, :action=>:about)%></li>
				<li>|</li>
				<li><%=link_to("media.", :controller=>:site, :action=>:media)%></li>
				<li>|</li>
				<li><%=link_to("press.", :controller=>:site, :action=>:press)%></li>
				<li>|</li>
				<li><%=link_to("podcast.", :controller=>:site, :action=>:podcast)%></li>
				<li>|</li>
				<li><%=link_to("shows.", :controller=>:site, :action=>:shows)%></li>
				<li>|</li>
				<li><%=link_to("contact.", :controller=>:site, :action=>:contact)%></li>
				<li>|</li>
				<li><%=link_to("epk.", :controller=>:site, :action=>:epk)%></li>
			</ul>
		</div><!--nav-->
		<div class="clear"></div>
		<div id="main">
			<div id="right_col">
